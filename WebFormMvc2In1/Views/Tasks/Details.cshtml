@model TODO.Models.Task

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<fieldset>
    <legend>Task</legend>

    <div class="display-label">Name</div>
    <div class="display-field">@Model.Name</div>

    <div class="display-label">Description</div>
    <div class="display-field">@Model.Description</div>

    <div class="display-label">Status</div>
    <div class="display-field">@(Model.Status == null ? "None" : Model.Status.Name)</div>

    <div class="display-label">Notes</div>
    <div class="display-field">@(Model.Notes == null ? "None" : Model.Notes.Count.ToString())</div>

    <div class="display-label">CreatedOn</div>
    <div class="display-field">@String.Format("{0:g}", Model.CreatedOn)</div>

    <div class="display-label">ModifiedOn</div>
    <div class="display-field">@String.Format("{0:g}", Model.ModifiedOn)</div>
</fieldset>
<p>
    @Html.ActionLink("Edit", "Edit", new { id=Model.TaskId }) |
    @Html.ActionLink("Back to List", "Index")
</p>


